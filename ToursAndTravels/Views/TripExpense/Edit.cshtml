@model ToursAndTravels.Models.TripExpense

@{
    ViewData["Title"] = "Edit Expense";
}

<h2 class="text-primary"><i class="fas fa-edit"></i> Edit Expense</h2>

<div class="card shadow mt-3">
    <div class="card-header bg-warning text-white">
        <h4><i class="fas fa-pencil-alt"></i> Update Expense Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ExpenseID" />

            <div class="form-group">
                <label asp-for="TripID"><i class="fas fa-truck"></i> Trip ID</label>
                <input asp-for="TripID" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="DriverAdvance"><i class="fas fa-user-tie"></i> Driver Advance</label>
                <input asp-for="DriverAdvance" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="DriverAdvance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LoadingCharges"><i class="fas fa-dolly"></i> Loading Charges</label>
                <input asp-for="LoadingCharges" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="LoadingCharges" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PoliceEntryFee"><i class="fas fa-shield-alt"></i> Police Entry Fee</label>
                <input asp-for="PoliceEntryFee" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="PoliceEntryFee" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Commission"><i class="fas fa-percent"></i> Commission</label>
                <input asp-for="Commission" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Commission" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Diesel"><i class="fas fa-gas-pump"></i> Diesel</label>
                <input asp-for="Diesel" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Diesel" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
            </div>
        </form>
    </div>
</div>
