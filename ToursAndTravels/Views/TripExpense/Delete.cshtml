@model ToursAndTravels.Models.TripExpense

@{
    ViewData["Title"] = "Delete Expense";
}

<h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> You are about to delete this expense record. This action cannot be undone.
</div>

<div class="card shadow mt-3">
    <div class="card-header bg-danger text-white">
        <h4><i class="fas fa-trash-alt"></i> Expense Details</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th><i class="fas fa-truck"></i> Trip ID</th>
                    <td>@Model.TripID</td>
                </tr>
                <tr>
                    <th><i class="fas fa-user-tie"></i> Driver Advance</th>
                    <td>@Model.DriverAdvance.ToString("C")</td>
                </tr>
                <tr>
                    <th><i class="fas fa-dolly"></i> Loading Charges</th>
                    <td>@Model.LoadingCharges.ToString("C")</td>
                </tr>
                <tr>
                    <th><i class="fas fa-shield-alt"></i> Police Entry Fee</th>
                    <td>@Model.PoliceEntryFee.ToString("C")</td>
                </tr>
                <tr>
                    <th><i class="fas fa-percent"></i> Commission</th>
                    <td>@Model.Commission.ToString("C")</td>
                </tr>
                <tr>
                    <th><i class="fas fa-gas-pump"></i> Diesel</th>
                    <td>@Model.Diesel.ToString("C")</td>
                </tr>
                @if (Model.TotalExpense != null)
                {
                    <tr class="table-danger">
                        <th><i class="fas fa-calculator"></i> Total Expense</th>
                        <td><strong>@Model.TotalExpense.ToString("C")</strong></td>
                    </tr>
                }
            </tbody>
        </table>

        <form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
            <input type="hidden" asp-for="ExpenseID" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you absolutely sure you want to delete this expense? This action cannot be undone.");
        }
    </script>
}
