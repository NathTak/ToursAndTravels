@model ToursAndTravels.Models.DriverSalary

@{
    ViewData["Title"] = "Delete Salary";
}

<h2 class="text-center text-danger">Delete Driver Salary</h2>

<h4>Are you sure you want to delete this salary record?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Driver Name:</dt>
        <dd class="col-sm-9">@Model.Driver.DriverName</dd>

        <dt class="col-sm-3">Salary Date:</dt>
        <dd class="col-sm-9">@Model.SalaryDate.ToString("dd-MMM-yyyy")</dd>

        <dt class="col-sm-3">Salary Amount:</dt>
        <dd class="col-sm-9">₹ @Model.SalaryAmount.ToString("N2")</dd>

        <dt class="col-sm-3">Notes:</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SalaryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
