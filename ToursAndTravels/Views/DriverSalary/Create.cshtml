@model ToursAndTravels.Models.DriverSalary

@{
    ViewData["Title"] = "Add Salary";
}

<h2 class="text-center text-primary">Add Driver Salary</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Driver:</label>
        @if (ViewBag.Drivers != null)
        {
            <select asp-for="DriverId" asp-items="@(new SelectList(ViewBag.Drivers, "DriverId", "Name"))">
                <option value="">-- Select Driver --</option>
            </select>
        }
        else
        {
            <p class="text-danger">No drivers found. Please add drivers first.</p>
        }

        <span asp-validation-for="DriverId" class="text-danger"></span>
    </div>

    <div>
        <label>Salary Date:</label>
        <input asp-for="SalaryDate" type="date" />
        <span asp-validation-for="SalaryDate" class="text-danger"></span>
    </div>

    <div>
        <label>Salary Amount:</label>
        <input asp-for="SalaryAmount" type="number" step="0.01" />
        <span asp-validation-for="SalaryAmount" class="text-danger"></span>
    </div>

    <div>
        <label>Notes:</label>
        <textarea asp-for="Notes"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit">Save Salary</button>
</form>

