@model ToursAndTravels.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<h2 class="mb-4 text-danger"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h2>

<div class="card shadow-lg p-4 border-danger">
    <div class="card-body">
        <h4 class="text-dark">Trip Details</h4>
        <hr />
        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Date:</strong> @Model.Date.ToShortDateString()</li>
            <li class="list-group-item"><strong>Vehicle No:</strong> @Model.VehicleNo</li>
            <li class="list-group-item"><strong>From:</strong> @Model.FromLocation</li>
            <li class="list-group-item"><strong>To:</strong> @Model.ToLocation</li>
            <li class="list-group-item"><strong>Trip Rent (₹):</strong> @Model.TripRent</li>
        </ul>

        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <span>Are you sure you want to delete this trip? This action cannot be undone.</span>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TripId" />

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete Trip
                </button>
            </div>
        </form>
    </div>
</div>
