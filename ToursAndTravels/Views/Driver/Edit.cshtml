@model ToursAndTravels.Models.Driver

@{
    ViewData["Title"] = "Edit Driver";
}

<h2 class="text-warning"><i class="fas fa-edit"></i> Edit Driver</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="DriverId" />

    <div class="card shadow">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Driver Name</label>
                <input asp-for="DriverName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Contact Number</label>
                <input asp-for="ContactNumber" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">License Number</label>
                <input asp-for="LicenseNumber" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Update</button>
            </div>
        </div>
    </div>
</form>
