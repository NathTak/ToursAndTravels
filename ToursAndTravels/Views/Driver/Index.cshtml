@model IEnumerable<ToursAndTravels.Models.Driver>

@{
    ViewData["Title"] = "Drivers";
}

<h2 class="text-primary"><i class="fas fa-user-tie"></i> Driver List</h2>

<a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add New Driver</a>

<table class="table table-bordered table-striped">
    <thead class="bg-info text-white">
        <tr>
            <th>Driver Name</th>
            <th>Contact Number</th>
            <th>License Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                <td>@driver.DriverName</td>
                <td>@driver.ContactNumber</td>
                <td>@driver.LicenseNumber</td>
                <td>@driver.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@driver.DriverId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@driver.DriverId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> View</a>
                    <a asp-action="Delete" asp-route-id="@driver.DriverId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
